generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ============================================================================
// ENUMS
// ============================================================================

enum Arcana {
  MAJOR
  MINOR
}

enum Suit {
  WANDS
  CUPS
  SWORDS
  PENTACLES
}

enum TransactionType {
  PURCHASE
  READING
  BONUS
  REFERRAL
  SUBSCRIPTION
}

// ============================================================================
// AUTH MODELS (NextAuth)
// ============================================================================

model User {
  id               String    @id @default(cuid())
  email            String    @unique
  emailVerified    DateTime?
  name             String?
  image            String?
  password         String?   // For credentials auth
  freeReadingsLeft Int       @default(3)
  credits          Int       @default(0)
  createdAt        DateTime  @default(now())
  updatedAt        DateTime  @updatedAt

  // Referral system
  referralCode     String?   @unique
  referredBy       String?   // referralCode of who invited this user
  referralCredits  Int       @default(0)
  referralCount    Int       @default(0) // count of successful referrals

  // Streak system
  currentStreak    Int       @default(0)
  longestStreak    Int       @default(0)
  lastReadingDate  DateTime?

  accounts       Account[]
  sessions       Session[]
  readings       Reading[]
  transactions   CreditTransaction[]
  profile        UserProfile?
  subscription   Subscription?
  dailyReadings  DailyReading[]
  streakRewards  StreakReward[]
  cardCollection UserCardCollection[]
  achievements   UserAchievement[]

  @@map("users")
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
  @@map("accounts")
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("sessions")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
  @@map("verification_tokens")
}

model PasswordResetToken {
  id        String   @id @default(cuid())
  email     String
  token     String   @unique
  expires   DateTime
  createdAt DateTime @default(now())

  @@index([email])
  @@map("password_reset_tokens")
}

// ============================================================================
// APP MODELS
// ============================================================================

model Card {
  id              String   @id @default(cuid())
  name            String   @unique
  nameEs          String
  slug            String?  @unique
  arcana          Arcana
  suit            Suit?
  number          Int
  keywords        String[]
  meaningUpright  String   @db.Text
  meaningReversed String   @db.Text
  imageUrl        String

  dailyReadings  DailyReading[]
  userCollection UserCardCollection[]

  @@unique([arcana, suit, number])
  @@map("cards")
}

model SpreadType {
  id            String @id @default(cuid())
  name          String @unique
  nameEs        String
  description   String @db.Text
  descriptionEs String @db.Text
  cardCount     Int
  positions     Json
  creditCost    Int
  category      String @default("classic") // classic, themed, special

  readings Reading[]

  @@map("spread_types")
}

model Reading {
  id             String   @id @default(cuid())
  userId         String
  spreadTypeId   String
  intention      String   @db.Text
  cards          Json
  interpretation String   @db.Text
  isPublic       Boolean  @default(false)
  shareId        String?  @unique
  personalNotes  String?  @db.Text
  createdAt      DateTime @default(now())
  updatedAt      DateTime @default(now()) @updatedAt

  user       User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  spreadType SpreadType @relation(fields: [spreadTypeId], references: [id])

  transaction CreditTransaction?

  @@index([userId])
  @@index([createdAt])
  @@map("readings")
}

model CreditTransaction {
  id              String          @id @default(cuid())
  userId          String
  amount          Int
  type            TransactionType
  readingId       String?         @unique
  stripeSessionId String?
  createdAt       DateTime        @default(now())

  user    User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  reading Reading? @relation(fields: [readingId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([createdAt])
  @@map("credit_transactions")
}

// ============================================================================
// DAILY ORACLE MODELS
// ============================================================================

model UserProfile {
  id         String   @id @default(cuid())
  userId     String   @unique
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  birthDate  DateTime
  birthTime  String?  // HH:mm format, opcional
  zodiacSign String   // Calculado automaticamente
  fullName   String
  focusArea  String   @default("general") // love, career, spirituality, health, general
  emailTime  String   @default("08:00") // Hora preferida para recibir email
  locale     String   @default("es") // "es" | "en"
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@map("user_profiles")
}

model Subscription {
  id                   String    @id @default(cuid())
  userId               String    @unique
  user                 User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  plan                 String    @default("daily_oracle") // daily_oracle
  status               String    @default("active") // active, canceled, past_due, credits_exhausted
  paymentMethod        String    @default("stripe") // "stripe" | "credits"
  creditsCostPerMonth  Int       @default(10) // Costo mensual en creditos
  stripeSubscriptionId String?   @unique
  stripeCustomerId     String?
  currentPeriodStart   DateTime?
  currentPeriodEnd     DateTime?
  cancelAtPeriodEnd    Boolean   @default(false)
  freeReadingsPerMonth Int       @default(1)
  freeReadingsUsed     Int       @default(0)
  lastResetDate        DateTime  @default(now())
  createdAt            DateTime  @default(now())
  updatedAt            DateTime  @updatedAt

  @@map("subscriptions")
}

model DailyReading {
  id             String    @id @default(cuid())
  userId         String
  user           User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  date           DateTime  @db.Date
  cardId         String
  card           Card      @relation(fields: [cardId], references: [id])
  isReversed     Boolean   @default(false)
  interpretation String    @db.Text
  sentAt         DateTime?
  openedAt       DateTime? // Para tracking si lo abrio
  createdAt      DateTime  @default(now())

  @@unique([userId, date]) // Una carta por dia por usuario
  @@index([userId])
  @@index([date])
  @@map("daily_readings")
}

// ============================================================================
// BLOG MODELS
// ============================================================================

model BlogPost {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  titleEs     String
  excerpt     String
  excerptEs   String
  content     String    @db.Text
  contentEs   String    @db.Text
  coverImage  String?
  published   Boolean   @default(false)
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  @@index([published])
  @@index([publishedAt])
  @@map("blog_posts")
}

// ============================================================================
// STREAK REWARDS
// ============================================================================

model StreakReward {
  id             String   @id @default(cuid())
  userId         String
  user           User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  milestone      Int      // 3, 7, 14, 30, 60, 100
  creditsAwarded Int
  claimedAt      DateTime @default(now())

  @@unique([userId, milestone])
  @@index([userId])
  @@map("streak_rewards")
}

// ============================================================================
// CARD COLLECTION
// ============================================================================

model UserCardCollection {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  cardId       String
  card         Card     @relation(fields: [cardId], references: [id])
  discoveredAt DateTime @default(now())

  @@unique([userId, cardId])
  @@index([userId])
  @@index([discoveredAt])
  @@map("user_card_collections")
}

// ============================================================================
// ACHIEVEMENTS
// ============================================================================

model Achievement {
  id            String   @id @default(cuid())
  key           String   @unique // "first_reading", "seeker", etc.
  name          String   // Display name en inglés
  nameEs        String   // Display name en español
  description   String   // Descripción en inglés
  descriptionEs String   // Descripción en español
  icon          String   // Emoji
  category      String   // "readings", "collection", "time", "streak", "subscription"
  requirement   Int      // Número requerido (1, 10, 50, 78, etc.)
  creditReward  Int      // Créditos que otorga
  createdAt     DateTime @default(now())

  userAchievements UserAchievement[]

  @@map("achievements")
}

model UserAchievement {
  id            String      @id @default(cuid())
  userId        String
  user          User        @relation(fields: [userId], references: [id], onDelete: Cascade)
  achievementId String
  achievement   Achievement @relation(fields: [achievementId], references: [id])
  unlockedAt    DateTime    @default(now())

  @@unique([userId, achievementId])
  @@index([userId])
  @@index([unlockedAt])
  @@map("user_achievements")
}
